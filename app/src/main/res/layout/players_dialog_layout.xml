<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:elevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <ImageView
                android:id="@+id/imgClose"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/close"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:layout_marginTop="60dp"
                android:id="@+id/imagePlayers"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="280dp" />

            <ProgressBar
                android:layout_marginTop="180dp"
                android:layout_alignParentTop="true"
                android:id="@+id/loadingImage"
                android:layout_centerInParent="true"
                android:indeterminateTint="#7A18BE"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_below="@+id/imagePlayers"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:fontFamily="@font/robotocondensed"
                android:layout_marginTop="30dp"
                android:textColor="#7A18BE"
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/robotocondensedlight"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/txtShortName"
                android:textStyle="bold"
                android:layout_below="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/robotocondensedlight"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/txtPosition"
                android:textStyle="bold"
                android:layout_below="@+id/txtShortName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/robotocondensedlight"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtBornDate"
                android:textStyle="bold"
                android:layout_below="@+id/txtPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/robotocondensedlight"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/txtCountry"
                android:textStyle="bold"
                android:layout_below="@+id/txtBornDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>