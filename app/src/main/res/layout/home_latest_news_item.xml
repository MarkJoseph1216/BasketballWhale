<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.andexert.library.RippleView
        app:rv_rippleDuration="80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_centerInParent="true"
            android:elevation="12dp"
            android:layout_width="350dp"
            android:layout_height="400dp">

                <RelativeLayout
                    android:background="@drawable/cardholder"
                    android:layout_width="350dp"
                    android:layout_height="400dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imgLatestNews" />

                    <TextView
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imgLatestNews"
                        android:layout_marginTop="30dp"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="60dp"
                        android:layout_marginLeft="50dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/txtAuthorName"
                        android:textColor="#7A18BE"
                        android:fontFamily="@font/robotocondensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_toRightOf="@+id/imgLatestNews"
                        android:layout_below="@+id/txtAuthorName"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_centerInParent="true"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/txtDatePublished"
                        android:textColor="#7A18BE"
                        android:fontFamily="@font/robotocondensedlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_below="@+id/txtDatePublished"
                        android:id="@+id/txtHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_toLeftOf="@+id/txtHide"
                        android:layout_below="@+id/imgLatestNews"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="15dp"
                        android:textSize="13sp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/txtItemName"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/robotocondensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </com.andexert.library.RippleView>
</RelativeLayout>