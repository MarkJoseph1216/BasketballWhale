<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="30dp"
        android:id="@+id/imgLeagues"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/txtLeaguesName"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotocondensed"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/imgLeagues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/txtStartDate"
        android:layout_below="@+id/txtLeaguesName"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotocondensedlight"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgLeagues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/txtEndDate"
        android:layout_below="@+id/txtStartDate"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotocondensedlight"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgLeagues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/txtSlugName"
        android:layout_below="@+id/txtEndDate"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotocondensedlight"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgLeagues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginBottom="1dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@+id/imgLeagues"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>