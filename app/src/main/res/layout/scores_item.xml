<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imgHomeTeam"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/lato_regular"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/imgHomeTeam"
        android:id="@+id/txtTeamHomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorLighGray"
        android:textSize="11sp"
        android:layout_below="@+id/txtTeamHomeName"
        android:fontFamily="@font/lato_regular"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgHomeTeam"
        android:id="@+id/txtHomeCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_box"
        android:layout_width="80dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/txtHomeScore"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorWhite"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorWhite"
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAwayScore"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorWhite"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imgAwayTeam"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/lato_regular"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/imgAwayTeam"
        android:id="@+id/txtTeamAwayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorLighGray"
        android:textSize="11sp"
        android:layout_below="@+id/txtTeamHomeName"
        android:fontFamily="@font/lato_regular"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/imgAwayTeam"
        android:id="@+id/txtAwayCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/lighGray"
        android:layout_below="@+id/imgHomeTeam"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>